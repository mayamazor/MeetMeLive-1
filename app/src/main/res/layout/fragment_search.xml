

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    tools:context=".Search"><![CDATA[
    tools:ignore="Orientation"
    android:orientation="horizontal">



















































    ]]>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="125dp"
        android:layout_height="117dp"
        android:layout_marginTop="44dp"
        android:background="#FFFFFF"
        android:src="@drawable/location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_location"
        android:layout_width="193dp"
        android:layout_height="24dp"
        android:layout_marginTop="464dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/aclonica"
        android:textColor="#CD3C3C"
        android:textColorHint="#DA2929"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_location"
        android:layout_width="161dp"
        android:layout_height="28dp"
        android:layout_marginBottom="16dp"
        android:background="#AEE86DA7"
        android:fontFamily="@font/aclonica"
        android:text="My Location"
        android:textSize="6dp"
        app:backgroundTint="#AEE86DA7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_search"
        android:layout_width="109dp"
        android:layout_height="46dp"
        android:layout_marginBottom="76dp"
        android:fontFamily="@font/aclonica"
        android:text="Search"
        app:backgroundTint="#AEE86DA7"
        app:layout_constraintBottom_toTopOf="@+id/text_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="124dp"
        android:fontFamily="@font/aclonica"
        android:text="Tap Here To Start  Your Search "
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:fontFamily="@font/aclonica"
        android:text="To Your Location Tap Here "
        android:textColor="#E43F88"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/button_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_location"
        app:layout_constraintVertical_bias="0.948" />
</androidx.constraintlayout.widget.ConstraintLayout>